{
  "name": "PyTorch 3 Rocm 7.1",
  "dockerComposeFile": "pytorch-rocm-compose.yaml",
  "service": "pytorch-rocm",
  "onCreateCommand": {
    "update": "apt update && apt -y upgrade",
    "installRequirements": "pip install -r requirements.txt"
  },
  "postCreateCommand": {
    "getBaseRequirements": "pip freeze > env-requirements.txt",
    "createVenv": "python -m venv venv"
  },
  "postAttachCommand": {
    "installEnvRequirements": "source venv/bin/activate && pip install -r env-requirements.txt && rm env-requirements.txt",
    "installRequirements": "source venv/bin/activate && pip install -r requirements.txt"
  },
  "customizations": {
    "jetbrains": {
      "backend": "PyCharm",
      "plugins": [
        "PythonCore", "Pythonid"
      ]
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
